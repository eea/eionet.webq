<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Input Control</title>
    <page>
        <title>The input Element</title>
        <description>This form control enables free-form data entry or a user interface component appropriate to the
            datatype of the bound node.
        </description>
        <specification>
            <link>http://www.w3.org/TR/xforms11/#ui-input</link>
            <description>XForms 1.1 Element Specification</description>
        </specification>
        <content>
            <models>
                <!--
                <xf:model>
                    <xf:instance>
                        ....
                    </xf:instance>
                </xf:model>
                <xf:model>
                    <xf:instance>
                        ....
                    </xf:instance>
                </xf:model>
                -->
            </models>
            <samples>
                <section>
                    <title>Tile 1</title>
                    <description>Description 1</description>
                    <xf:input value="BlaBla" incremental="true" ref="input1">
                        <xf:label>a text</xf:label>
                        <xf:hint>input bound to string</xf:hint>
                        <xf:alert>invalid</xf:alert>
                    </xf:input>
                </section>
                <section>
                    <title>Tile 2</title>
                    <description>Description 2</description>
                   <xf:input incremental="true" datatype="boolean" ref="input2" value="true">
                        <xf:label>a boolean</xf:label>
                        <xf:hint>input bound to boolean</xf:hint>
                        <xf:alert>invalid</xf:alert>
                    </xf:input>
                </section>
                <section>
                    <title>Tile 3</title>
                    <description>Description 3</description>
                    <xf:input incremental="true" datatype="date" ref="input3">
                        <xf:label>a date</xf:label>
                        <xf:hint>input bound to date</xf:hint>
                        <xf:alert>invalid</xf:alert>
                    </xf:input>
                </section>
            </samples>
        </content>
    </page>
</data>
