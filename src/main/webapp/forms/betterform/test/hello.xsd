<xs:schema xmlns:my="http://my.schema.com/schema" xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://my.schema.com/schema" elementFormDefault="qualified">

	<xs:element name="email" type="my:email" />

    <xs:simpleType name="email">
        <xs:restriction base="xs:string">
            <xs:pattern value="[A-Za-z0-9!#-'\*\+\-/=\?\^_`\{-~]+(\.[A-Za-z0-9!#-'\*\+\-/=\?\^_`\{-~]+)*@[A-Za-z0-9!#-'\*\+\-/=\?\^_`\{-~]+(\.[A-Za-z0-9!#-'\*\+\-/=\?\^_`\{-~]+)*"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
